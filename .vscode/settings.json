{
    "editor.formatOnType": true,
    "editor.formatOnSave": true,
    "files.insertFinalNewline": true,
    "cmake.buildDirectory": "${workspaceFolder}/build",
    // "cmake.buildTask": true,
    "cmake.copyCompileCommands": "${workspaceFolder}/compile_commands.json",
    "files.watcherExclude": {
        "**/build/**": true
    },
    "search.exclude": {
        "${workspaceFolder}/build": true
    },
    "cquery.cacheDirectory": "${workspaceFolder}/build/cquery",
    //
    "licenser.projectName": "APX Ground Control",
    "licenser.customHeader": "APX Autopilot project <http://docs.uavos.com>\\n\\nCopyright (c) 2003-@YEAR@, @AUTHOR@\\nAll rights reserved\\n\\nThis file is part of @PROJECT@.\\nRedistribution and use in source and binary forms, with or without\\nmodification, are permitted exclusively under the terms of the\\nLGPLv3 license. You should have received a copy of the license with\\nthis file. If not, please visit: http://docs.uavos.com/gcs.",
    "licenser.useSingleLineStyle": false,
    "licenser.license": "Custom",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/*.pyc": true,
        "**/__pycache__": true,
        "**/*.fileloc": true
    },
    /* C++ analyser */
    "C_Cpp.autoAddFileAssociations": false,
    "C_Cpp.clang_format_fallbackStyle": "none",
    "C_Cpp.default.browse.limitSymbolsToIncludedHeaders": true,
    "C_Cpp.default.cppStandard": "c++14",
    "C_Cpp.default.cStandard": "c11",
    "C_Cpp.vcpkg.enabled": false,
    "C_Cpp.workspaceParsingPriority": "low",
    "C_Cpp.intelliSenseEngine": "Default",
    "C_Cpp.intelliSenseCachePath": "${workspaceFolder}/build/cache",
    "C_Cpp.default.mergeConfigurations": true,
    "C_Cpp.default.compileCommands": "${workspaceFolder}/compile_commands.json",
    "C_Cpp.default.includePath": [
        "${workspaceFolder}/**"
    ],
}
